@{
    ViewData["Title"] = "Home Page";
}

<br>
<div class="d-flex flex-column flex-lg-row align-items-center justify-content-around mt-3">
    <div class="card text-bg-primary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-primary text-light">Excellence</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanExcellence">20</span>+<sub>Years</sub></h2>
            <p class="card-text" style="text-align:justify">Delivering excellence from more than two decades in area of Management & Technology.</p>
        </div>
    </div>
    <div class="card text-bg-secondary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-warning text-dark">Courses</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanCourses">15</span>+<sub>Courses</sub></h2>
            <p class="card-text" style="text-align:justify">A wide range of professional courses to fulfill the industry human resourse requirement.</p>
        </div>
    </div>
    <div class="card text-bg-secondary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-info text-dark">Faculty</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanFaculty">100</span>+<sub>Members</sub></h2>
            <p class="card-text" style="text-align:justify">A team of well qualified staff who is updated with latest technology and skills.</p>
        </div>
    </div>
</div>
<div class="d-flex flex-column flex-lg-row align-items-center justify-content-around pt-3">
    <div class="card text-bg-primary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-success text-light">Placements</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanPlacements">1000</span>+<sub>Jobs</sub></h2>
            <p class="card-text" style="text-align:justify">Many of our students got campus placemcent in companies like Amazon, Nagaaro, Dell & Wipro etc.</p>
        </div>
    </div>
    <div class="card text-bg-secondary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-secondary text-light">Students</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanStudents">3000</span>+<sub>Students</sub></h2>
            <p class="card-text" style="text-align:justify">Our student strength witness our excellence and performance in education sector.</p>
        </div>
    </div>
    <div class="card text-bg-secondary mb-3" style="max-width: 18rem; height:13rem;">
        <div class="card-header bg-danger text-light">Scholarships</div>
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <h2 class="card-title"><span id="eleSpanScholarships">10</span>+<sub>Scholarships</sub></h2>
            <p class="card-text" style="text-align:justify">Offering more than ten types of the scholarships to the eligible students.</p>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        let interval;
        let count = 0, excellence = 20, courses = 15, faculty = 100, placements = 1000, students = 3000, scholarships = 10;

        $(document).ready(() => {
            interval = setInterval(updateCount, 1);
        })
        function updateCount() {
            document.getElementById("eleSpanExcellence").innerText = Math.round(count / students * excellence);
            document.getElementById("eleSpanCourses").innerText = Math.round(count / students * courses);
            document.getElementById("eleSpanFaculty").innerText = Math.round(count / students * faculty);
            document.getElementById("eleSpanPlacements").innerText = Math.round(count / students * placements);
            document.getElementById("eleSpanStudents").innerText = Math.round(count / students * students);
            document.getElementById("eleSpanScholarships").innerText = Math.round(count / students * scholarships);

            count++;
            if (count > students) { clearInterval(interval); }
        }
